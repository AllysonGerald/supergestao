make-interface: ## Cria interface
	@read -p "Nome da interface (ex: UserRepositoryInterface): " name; \
	if [ -z "$$name" ]; then \
		echo "$(RED)‚ùå Nome √© obrigat√≥rio!$(NC)"; \
	else \
		echo "$(GREEN)üìù Criando interface $$name...$(NC)"; \
		docker compose exec php bash -c "echo '<?php' > backend/app/$$name.php"; \
		docker compose exec php bash -c "echo '' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo 'namespace App;' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo '' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo 'interface $$name' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo '{' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo '    // Define interface methods' >> backend/app/$$name.php"; \
		docker compose exec php bash -c "echo '}' >> backend/app/$$name.php"; \
		echo "$(GREEN)‚úÖ Interface $$name criada em backend/app/$$name.php$(NC)"; \
	fi

make-trait: ## Cria trait
	@read -p "Nome do trait (ex: HasUuid): " name; \
	if [ -z "$$name" ]; then \
		echo "$(RED)‚ùå Nome √© obrigat√≥rio!$(NC)"; \
	else \
		echo "$(GREEN)üìù Criando trait $$name...$(NC)"; \
		docker compose exec php mkdir -p backend/app/Traits; \
		docker compose exec php bash -c "echo '<?php' > backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo '' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo 'namespace App\\\Traits;' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo '' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo 'trait $$name' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo '{' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo '    // Trait methods' >> backend/app/Traits/$$name.php"; \
		docker compose exec php bash -c "echo '}' >> backend/app/Traits/$$name.php"; \
		echo "$(GREEN)‚úÖ Trait $$name criado em backend/app/Traits/$$name.php$(NC)"; \
	fi

